.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.article-list {
  padding: 20rpx;
}

.article-item {
  display: flex;
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.article-item:active {
  background-color: #f5f5f5;
}

.article-thumb {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.article-thumb-placeholder {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  font-size: 24rpx;
  color: #999;
}

.article-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.article-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.article-meta {
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

.article-meta text {
  margin-right: 20rpx;
}

.loading-more,
.no-more,
.empty {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
} 