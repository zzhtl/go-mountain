.container {
  background-color: white;
  min-height: 100vh;
}

.loading,
.empty {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
  font-size: 30rpx;
}

.article {
  padding-bottom: 40rpx;
}

.article-header {
  padding: 40rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.article-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-bottom: 20rpx;
}

.article-meta {
  font-size: 26rpx;
  color: #999;
}

.meta-item {
  margin-right: 20rpx;
}

.article-content {
  padding: 30rpx;
  font-size: 32rpx;
  line-height: 1.8;
  color: #333;
}

/* 富文本内容样式 */
.article-content rich-text {
  display: block;
}

.article-content image {
  max-width: 100%;
  height: auto;
  display: block;
  margin: 20rpx 0;
}

.article-content video {
  width: 100%;
  height: auto;
  margin: 20rpx 0;
}

.article-content p {
  margin: 20rpx 0;
}

.article-content h1,
.article-content h2,
.article-content h3,
.article-content h4,
.article-content h5,
.article-content h6 {
  margin: 30rpx 0 20rpx;
  font-weight: bold;
}

.article-content blockquote {
  padding: 20rpx;
  margin: 20rpx 0;
  background-color: #f5f5f5;
  border-left: 6rpx solid #ddd;
} 